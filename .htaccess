<IfModule mod_rewrite.c>
  Options -MultiViews -Indexes
  RewriteEngine On
  RewriteBase /public
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^(.*?)$ public/$1 [L]
</IfModule>

<Files ~ "\.(env|json|config.js|md|gitignore|gitattributes|lock)$">
    Order allow,deny
    Deny from all
</Files>




